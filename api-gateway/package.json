{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "A single entry point that  - recieve all client request  - Forward to correct service - Block bad traffic",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  },
  "dependencies": {
    "express": "^5.2.1",
    "http-proxy-middleware": "^3.0.5",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "uuid": "^13.0.0"
  },
  "scripts": {
    "start": "node gateway/app.js",
    "dev": "nodemon --exec \"node --no-warnings\" gateway/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.tests.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 10000
  }
}
